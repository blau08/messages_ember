{{#if addAnswer}}
  <h3 class="title">New Answer</h3>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input value=name id="name" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="answer">Answer</label>
      {{textarea value=answer id="answer" class="form-control"}}
    </div>

    <button {{action 'saveAnswer'}} class="btn btn-info">Submit</button>
    <button {{action 'hideAddAnswer'}} class="btn btn-default">Cancel</button>
  </form>
{{else}}
  <button class="btn btn-info" {{action 'answerFormShow'}}>Add Answer</button>
{{/if}}
<br>
